{% comment %}
  @params breadcrumb
    array of objects with keys:
      link_text: string
      path: string
{% endcomment %}
<div class="py-4 bg-transparent">
  <nav class="flex justify-between mx-auto">
    <div class="flex items-center space-x-4 truncate divide-x-2 divide-gray-200">
      <div class="items-center hidden space-x-2 text-sm md:flex">
        {% for crumb in breadcrumb %}
          <a href="{{ crumb.path }}" class="flex space-x-2 text-gray-500 transition-all duration-300 hover:underline hover:text-blue-600">
            <span>{{ crumb.link_text | truncate: 30 }}</span>
          </a>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        {% endfor %}
        <span class="flex space-x-2 text-gray-700">
          <span>正文</span>
        </span>
      </div>
    </div>
    <div>

    </div>
  </nav>
</div>
