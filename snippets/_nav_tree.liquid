{% assign pages = site.pages['/'].children_in_nav_menu %}

<ul role="list" class="flex flex-col flex-1 gap-y-4">
  <li>
    <ul role="list" class="-mx-2 space-y-1">
      <li>
        <a href="/"
          class="flex p-2 text-sm font-semibold leading-6 text-white rounded-md group gap-x-3"
          x-state:on="Current" x-state:off="Default"
          x-state-description="Current: &quot;bg-primary text-white&quot;, Default: &quot;text-indigo-200 hover:text-white hover:bg-primary&quot;">
          <svg class="w-6 h-6 text-white shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25">
            </path>
          </svg>
          首页
        </a>
      </li>
      <li>
        <a href="/blog"
          class="flex p-2 text-sm font-semibold leading-6 text-indigo-200 rounded-md hover:text-white hover:bg-primary group gap-x-3"
          x-state-description="undefined: &quot;bg-primary text-white&quot;, undefined: &quot;text-indigo-200 hover:text-white hover:bg-primary&quot;">
          <svg class="w-6 h-6 text-indigo-200 shrink-0 group-hover:text-white" fill="none" viewBox="0 0 24 24"
            stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z">
            </path>
          </svg>
            博客
        </a>
      </li>

      <li>
        <a href="/support"
          class="flex p-2 text-sm font-semibold leading-6 text-indigo-200 rounded-md hover:text-white hover:bg-primary group gap-x-3"
          x-state-description="undefined: &quot;bg-primary text-white&quot;, undefined: &quot;text-indigo-200 hover:text-white hover:bg-primary&quot;">
          <svg class="w-6 h-6 text-indigo-200 shrink-0 group-hover:text-white" fill="none" viewBox="0 0 24 24"
            stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z">
            </path>
          </svg>
            帮助中心
        </a>
      </li>

      <li>
        <a href="/s/tools"
          class="flex p-2 text-sm font-semibold leading-6 text-indigo-200 rounded-md hover:text-white hover:bg-primary group gap-x-3"
          x-state-description="undefined: &quot;bg-primary text-white&quot;, undefined: &quot;text-indigo-200 hover:text-white hover:bg-primary&quot;">
          <svg class="w-6 h-6 text-indigo-200 shrink-0 group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z" />
          </svg>
          <span class="truncate">工具箱</span>
        </a>
      </li>
    </ul>
  </li>
  {% for page in pages %}
    {% assign sub_pages = page.children_in_nav_menu %}
    <li>
      <div class="text-xs font-semibold leading-6 text-indigo-200">{{ page.link_text }}</div>
      <ul role="list" class="ml-2 -mx-2 space-y-0 md:ml-3 gap-y-1">
        {% for sub_page in sub_pages %}
          {% assign title_words = sub_page.link_text |  split: '' %}
          <li>
            <a href="{{ sub_page.path }}"
              class="flex items-center text-sm font-semibold leading-6 text-indigo-200 rounded-md hover:text-white hover:bg-primary group gap-x-1"
              x-state:on="Current" x-state:off="Default"
              x-state-description="">
              <span class="flex items-center justify-center p-1 w-4 h-4 text-sm font-medium text-white border rounded-lg shrink-0 border-primary/50 bg-primary">
                {{ title_words[0] }}</span>
              <span class="truncate">{{ sub_page.link_text }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </li>
  {% endfor %}
  <li class="mt-auto">
    <a href="https://dev.baklib.cn" target="_blank"
      class="flex p-2 -mx-2 text-sm font-semibold leading-6 rounded-md group gap-x-3 bg-primary text-white">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-200 shrink-0 group-hover:text-white">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
      </svg>
      Baklib 低代码编辑器
    </a>
  </li>
</ul>
