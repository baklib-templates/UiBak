  </svg>
  ' %}

<div class="px-4 md:px-8">
  {% render 'breadcrumb', breadcrumb: page.breadcrumb, page: page %}
</div>

<main class="p-4 md:p-12 bg-slate-100 min-h-screen">
  <div class="max-w-screen-xl mx-auto space-y-6">
    {% paginate_tag pages, per: 24 %}
      <div class="grid flex-1 gap-6 grid-cols-2 md:grid-cols-3 xl:grid-cols-4">
        {% for page in pages %}
          {% assign sub_page_count = page.pages_in_list | size %}
          <a href="{{ page.path }}" class="flex flex-col items-start justify-between px-4 pt-6 pb-3 space-y-6 transition-all duration-300 bg-white rounded-md shadow-sm shadow-gray-200 hover:-translate-y-1 hover:shadow-md ">
            <div class="flex items-center justify-center p-2 w-12 h-12 text-teal-600 bg-teal-100 rounded-md md:w-16 md:h-16">
              {{ page.settings.svg_icon |  default: default_svg }}
            </div>
            <div class="flex-1">
              <span class="text-lg lg:text-xl font-semibold text-gray-800">{{ page.link_text }}</span>
              <span class="block mt-1 mb-2 text-sm text-gray-700">{{ sub_page_count }} 个组件</span>
              <span class="block mb-3 text-sm text-gray-500">{{ page.settings.description }}</span>
            </div>
          </a>
        {% endfor %}
      </div>
      <!-- Pagination -->
      <div>
        {% render 'paginate', paginate: paginate %}
      </div>
    {% endpaginate_tag %}
  </div>
</main>

{% schema %}
  {
    "name": "collection集合分类",
    "description": "只做分类用，下级是 collection_section",
    "thumb_url": "images/theme/collection.png",
    "sub_page_templates": ["collection_section"],
    "settings": [
    ]
  }
{% endschema%}
